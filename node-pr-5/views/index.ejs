<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #111;
      color: white;
    }

    .navbar {
      background-color: #1f1f1f !important;
    }

    .section-title {
      margin: 20px 0 10px;
      font-weight: bold;
      font-size: 1.3rem;
    }

    .movie-row {
      display: flex;
      overflow-x: auto;
      gap: 15px;
      padding-bottom: 10px;
    }

    .movie-card {
      flex: 0 0 auto;
      width: 200px;
      background-color: #222;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.2s ease;
    }

    .movie-card img {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }

    .movie-card:hover {
      transform: scale(1.05);
    }

    .movie-card-body {
      padding: 10px;
    }

    .movie-card-body p {
      margin: 0;
      font-size: 0.85rem;
      color: #bbb;
    }

    .edit-delete {
      display: flex;
      justify-content: space-between;
      margin-top: 8px;
    }

    .edit-delete a,
    .edit-delete button {
      font-size: 0.8rem;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg" style="background-color: #1f1f1f;">
    <div class="container-fluid">
      <a class="navbar-brand text-light" href="/">Movie Plex</a>

      <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link text-light active" aria-current="page" href="/">Home</a>
          </li>
        </ul>

        <form class="d-flex me-3" role="search">
          <input class="form-control form-control-sm me-2 bg-dark text-light border-secondary" type="search"
            placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-light btn-sm" type="submit">Search</button>
        </form>

        <a href="/movies/add" class="btn btn-warning fw-bold px-3">
          + Add Movie
        </a>
      </div>
    </div>
  </nav>




  <div class="container-fluid mt-4">

    <h2 class="section-title">Now Showing</h2>
    <div class="movie-row">
      <% movies.forEach(movie=> { %>
        <div class="movie-card">
          <% if (movie.poster) { %>
            <img src="/uploads/<%= movie.poster %>" alt="Poster">
            <% } else { %>
              <img src="https://via.placeholder.com/200x300?text=No+Image" alt="No poster">
              <% } %>

                <div class="movie-card-body">
                  <h6>
                    <%= movie.title %>
                  </h6>
                  <p><strong>Genre:</strong>
                    <%= movie.genre || "N/A" %>
                  </p>
                  <p><strong>Rating:</strong>
                    <%= movie.rating || "N/A" %>
                  </p>

                  <div class="edit-delete">
                    <button class="btn btn-info btn-sm" data-bs-toggle="modal"
                      data-bs-target="#viewMovie<%= movie._id %>">
                      View More
                    </button>
                    <a href="/movies/edit/<%= movie._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/movies/delete/<%= movie._id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </div>
                </div>
        </div>

        <div class="modal fade" id="viewMovie<%= movie._id %>" tabindex="-1"
          aria-labelledby="viewMovieLabel<%= movie._id %>" aria-hidden="true">
          <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content bg-dark text-light">
              <div class="modal-header">
                <h5 class="modal-title" id="viewMovieLabel<%= movie._id %>">
                  <%= movie.title %>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                  aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <% if (movie.poster) { %>
                  <img src="/uploads/<%= movie.poster %>" alt="Poster" class="img-fluid mb-3 rounded">
                  <% } %>
                    <p><strong>Director:</strong>
                      <%= movie.director %>
                    </p>
                    <p><strong>Genre:</strong>
                      <%= movie.genre || "N/A" %>
                    </p>
                    <p><strong>Release Date:</strong>
                      <%= movie.releaseDate ? movie.releaseDate.toDateString() : "N/A" %>
                    </p>
                    <p><strong>Duration:</strong>
                      <%= movie.duration %> mins
                    </p>
                    <p><strong>Rating:</strong>
                      <%= movie.rating || "N/A" %>
                    </p>
                    <p><strong>Language:</strong>
                      <%= movie.language || "N/A" %>
                    </p>
                    <p><strong>Description:</strong>
                      <%= movie.description || "No description available." %>
                    </p>
              </div>
             <a href="/movies/<%= movie._id %>/reserve" class="btn btn-success btn-sm">Reserve Seats</a>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
  
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>