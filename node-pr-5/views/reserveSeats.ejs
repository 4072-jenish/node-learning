<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reserve Seats</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #121212;
      color: #fff;
      font-family: Arial, sans-serif;
    }
    .container {
      max-width: 800px;
    }
    .screen {
      background-color: #ffc107;
      height: 30px;
      width: 100%;
      margin: 20px 0;
      border-radius: 5px;
      text-align: center;
      line-height: 30px;
      font-weight: bold;
      color: #000;
    }
    .seat {
      width: 40px;
      height: 40px;
      background-color: #444;
      margin: 5px;
      border-radius: 8px;
      display: inline-block;
      text-align: center;
      color: white;
      line-height: 40px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .seat.selected {
      background-color: #28a745;
    }
    .seat:hover {
      background-color: #555;
    }
    .seat-row {
      display: flex;
      justify-content: center;
    }
    .btn-submit {
      background-color: #ffc107;
      border: none;
      font-weight: bold;
      color: #000;
    }
    .btn-submit:hover {
      background-color: #e0a800;
    }
  </style>
</head>
<body>

  <div class="container mt-5 p-4 bg-dark rounded shadow">
    <h2 class="text-center mb-4">ðŸŽŸ Reserve Seats for <%= movie.title %></h2>

    <div class="screen">SCREEN</div>

    <form method="POST" action="/seats/<%= movie._id %>/reserve">
      <% for(let r = 1; r <= totalRows; r++) { %>
        <div class="seat-row">
          <% for(let s = 1; s <= seatsPerRow; s++) { 
               const seatId = `${r}-${s}`;
          %>
            <div class="seat" onclick="toggleSeat('<%= seatId %>')" id="seat-<%= seatId %>">
              <%= s %>
            </div>
          <% } %>
        </div>
      <% } %>

      <input type="hidden" name="selectedSeats" id="selectedSeats" />

      <div class="text-center mt-4">
        <button type="submit" class="btn btn-submit px-4 py-2">Confirm Reservation</button>
      </div>
    </form>
  </div>

  <script>
    let selectedSeats = [];
    function toggleSeat(id) {
      const seatElement = document.getElementById('seat-' + id);
      if (selectedSeats.includes(id)) {
        selectedSeats = selectedSeats.filter(s => s !== id);
        seatElement.classList.remove('selected');
      } else {
        selectedSeats.push(id);
        seatElement.classList.add('selected');
      }
      document.getElementById('selectedSeats').value = selectedSeats;
    }
  </script>

</body>
</html>
