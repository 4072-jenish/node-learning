<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Todo List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-5">
    <h1 class="text-center mb-4">üìù Todo List</h1>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form action="/add" method="POST" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="title" class="form-control" placeholder="Title" required>
                </div>
                <div class="col-md-5">
                    <input type="text" name="content" class="form-control" placeholder="Content" required>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">Add wORKE</button>
                </div>
            </form>
        </div>
    </div>

    <% if (todos.length === 0) { %>
        <p class="text-center text-muted">No todos yet.</p>
    <% } else { %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% todos.forEach((todo, index) => { %>
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= todo.title %></h5>
                            <p class="card-text"><%= todo.content %></p>
                            <div class="d-flex justify-content-end gap-2">
                                <form action="/delete" method="POST">
                                    <input type="hidden" name="index" value="<%= index %>">
                                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                                <a href="/edit/<%= index %>" class="btn btn-outline-secondary btn-sm">Edit</a>
                            </div>
                        </div>
                    </div> 
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

</body>
</html>
