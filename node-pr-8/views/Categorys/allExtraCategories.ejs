  <%- include("header") %>

  <h2>All ExtraCategories</h2>
  <a href="/extracategories/add" class="btn btn-primary mb-3">Add ExtraCategory</a>

  <% if (extras.length > 0) { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>SubCategory</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% extras.forEach(extra => { %>
          <tr>
            <td><%= extra.name %></td>
            <td><%= extra.description %></td>
            <td><%= extra.subCategory ? extra.subCategory.name : "N/A" %></td>
            <td><%= extra.subCategory && extra.subCategory.category ? extra.subCategory.category.name : "N/A" %></td>
            <td>
              <a href="/extracategories/edit/<%= extra._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/extracategories/delete/<%= extra._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No extra categories found.</p>
  <% } %>

  <%- include("footer") %>