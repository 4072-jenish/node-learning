  <%- include("header") %>
  <h2>All Categories</h2>
  <a href="/categories/add" class="btn btn-primary mb-3">Add Category</a>

  <% if (categories.length > 0) { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(cat => { %>
          <tr>
            <td><%= cat.name %></td>
            <td><%= cat.description %></td>
            <td>
              <a href="/categories/edit/<%= cat._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/categories/delete/<%= cat._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No categories found.</p>
  <% } %>
  <%- include("footer") %>
