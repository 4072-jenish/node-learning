  <%- include("header") %>
  <h2>All SubCategories</h2>
  <a href="/subcategories/add" class="btn btn-primary mb-3">Add SubCategory</a>

  <% if (subcategories.length > 0) { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% subcategories.forEach(sub => { %>
          <tr>
            <td><%= sub.name %></td>
            <td><%= sub.description %></td>
            <td><%= sub.category ? sub.category.name : "N/A" %></td>
            <td>
              <a href="/subcategories/edit/<%= sub._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/subcategories/delete/<%= sub._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No subcategories found.</p>
  <% } %>
</body>
</html>
  <%- include("footer") %>