<%- include("../header") %>
<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Extra Categories</h4>
        <div class="ml-auto text-right">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">All Extra Categories</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title m-b-0">All Extra Categories</h5>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Extra Category Name</th>
                <th>Main Category</th>
                <th>Sub Category</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (extraCategories && extraCategories.length > 0) { %>
                <% extraCategories.forEach((extra, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= extra.name %></td>
                    <td><%= extra.category ? extra.category.name : "—" %></td>
                    <td><%= extra.subCategory ? extra.subCategory.name : "—" %></td>
                    <td>
                      <a href="/extraCategories/edit/<%= extra._id %>" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                    <td>
                      <a href="/extraCategories/delete/<%= extra._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center">No Extra Categories found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("../footer") %>
