<%- include("header") %>
<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title"><%= blog ? 'Edit User' : 'Add User' %></h4>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form action="/blogs/<%= blog ? 'update/' + blog._id : 'add' %>" method="POST" enctype="multipart/form-data">
                        <div class="card-body">
                            <h4 class="card-title">Blog Details</h4>
                            <div class="form-group row">
                                <label for="title" class="col-sm-3 text-right control-label col-form-label">Title</label>
                                <div class="col-sm-9">
                                    <input type="text" name="title" id="title" class="form-control"
                                           value="<%= blog ? blog.title : '' %>" placeholder="Enter blog title" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="content" class="col-sm-3 text-right control-label col-form-label">Content</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="content" name="content" rows="5" placeholder="Write full content here" required><%= blog ? blog.content : '' %></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="category" class="col-sm-3 text-right control-label col-form-label">Category</label>
                                <div class="col-sm-9">
                                    <select class="form-control" id="category" name="category" required>
                                        <option value="">Select Category</option>
                                        <option value="Technology" <%= blog && blog.category === 'Technology' ? 'selected' : '' %>>Technology</option>
                                        <option value="Lifestyle" <%= blog && blog.category === 'Lifestyle' ? 'selected' : '' %>>Lifestyle</option>
                                        <option value="Business" <%= blog && blog.category === 'Business' ? 'selected' : '' %>>Business</option>
                                        <option value="Travel" <%= blog && blog.category === 'Travel' ? 'selected' : '' %>>Travel</option>
                                    </select>
                                </div>
                                
                            </div>
                            <div class="form-group row">
                                <label for="tags" class="col-sm-3 text-right control-label col-form-label">Tags</label>
                                <div class="col-sm-9">
                                    <input type="text" name="tags" id="tags" class="form-control"
                                           value="<%= blog ? blog.tags.join(', ') : '' %>" placeholder="Comma separated tags">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="image" class="col-sm-3 text-right control-label col-form-label">Blog Image</label>
                                <div class="col-sm-9">
                                    <input type="file" name="image" id="image" class="form-control" accept="image/*" <%= blog ? '' : 'required' %>>
                                    <% if(blog && blog.image) { %>
                                        <p>Current Image:</p>
                                        <img src="<%= blog.image %>" width="100" alt="Blog Image">
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary"><%= blog ? 'Update Blog' : 'Add Blog' %></button>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
<%- include("footer") %>
