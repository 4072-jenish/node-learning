<%- include("header") %>
<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Tables</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title m-b-0">Static Table</h5>
                    </div>

                    <div class="container mt-4">
                        <h1 class="mb-4">All Blogs</h1>
                        <a href="/blogs/addBlog" class="btn btn-primary mb-4">Add New Blog</a>
                        
                        <div class="row">
                            <% blogs.forEach(blog => { %>
                                <div class="col-md-4">
                                    <div class="card mb-4 shadow-sm">
                                        <% if (blog.image) { %>
                                            <img src="/uploads/<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>" style="height: 200px; object-fit: cover;">
                                        <% } else { %>
                                            <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No Image">
                                        <% } %>
                                        
                                        <div class="card-body">
                                            <h5 class="card-title"><%= blog.title %></h5>
                                            <p class="card-text" style="min-height: 80px;"><%= blog.content.length > 100 ? blog.content.substring(0, 100) + '...' : blog.content %></p>
                                            <p class="text-muted mb-2"><small>By <%= blog.authName %></small></p>
                                            <img src="<%= blog.authImage %>" alt="<%= blog.title %>" style="height: 50px; object-fit: cover;">

                                            
                                            <div class="d-flex justify-content-between">
                                                <a href="/blogs/editBlog/<%= blog._id %>" class="btn btn-warning btn-sm">Edit</a>
                                                <a href="/blogs/delBlog/<%= blog._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog?');">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>
<%- include("footer") %>
